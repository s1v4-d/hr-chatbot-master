{
    // Specifies the interpreter path for the current workspace (set via the "Python: Select Interpreter" command).
    "python.defaultInterpreterPath": ".venv/bin/python", 
    
    // Enables linting for Python files (should be set up automatically with the Python extension).
    "python.linting.enabled": true,
  
    // Linting provider for Python files, can be 'pylint', 'flake8', 'mypy', etc.
    "python.linting.pylintEnabled": true,
    "python.linting.pylintPath": ".venv/bin/pylint", // Make sure pylint is installed in the virtual environment.
  
    // Formatting provider options: 'autopep8', 'black', or 'yapf'.
    "python.formatting.provider": "autopep8",
  
    // Path to the autopep8 executable in the virtual environment.
    "python.formatting.autopep8Path": ".venv/bin/autopep8", // Make sure autopep8 is installed in the virtual environment.
  
    // Path to the black executable (only needed if using black as the formatter).
    "python.formatting.blackPath": ".venv/bin/black", // Optional if you're using black instead of autopep8.
  
    // Specify the Python packages folder for autocompletion
    "python.autoComplete.extraPaths": [
      ".venv/lib/python3.12/site-packages" // Adjust for your Python version if different
    ],
  
    // Optional: Enable the linting provider to show errors inline in the editor
    "python.linting.pylintArgs": ["--disable=R,C"] // Optional arguments to customize pylint behavior
  }
  
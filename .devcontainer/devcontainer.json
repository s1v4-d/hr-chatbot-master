{
    "name": "Python 3.12.1 + React Development Environment",
    "image": "mcr.microsoft.com/devcontainers/python:3.12.1",  // Use the Python 3.12.1 image
    "features": {
      "python": "3.12",                             // Use Python 3.12 feature
      "node": "lts"                                 // Use Node.js LTS version
    },
    "postCreateCommand": [
      "python -m venv .venv",                      // Create a Python virtual environment
      ".venv/bin/pip install --upgrade pip",       // Upgrade pip in the virtual environment
      ".venv/bin/pip install -r requirements.txt", // Install Python dependencies
      "npm install -g create-react-app",           // Globally install create-react-app (optional)
      "npm install",                              // Install Node dependencies from package.json
      "cd frontend && npm install"                // If you have a frontend directory, install React dependencies
    ],
    "remoteUser": "vscode",                       // Ensure the vscode user has the right permissions
    "mounts": [
      "source=${localWorkspaceFolder}/.venv,target=/workspace/.venv,type=volume"  // Optional: mount venv to persist
    ],
    "postStartCommand": "echo 'DevContainer setup complete!'"
  }
  
{
  "name": "Python + React Development Environment",
  "image": "mcr.microsoft.com/devcontainers/python:3.12.1",
  "features": {
    "python": "3.12",             // Ensure Python 3.12 is available
    "node": "lts"                // Install Node.js LTS version
  },
  "postCreateCommand": [
    // Setup Python environment
    "python -m venv .venv",
    ".venv/bin/python -m pip install --upgrade pip",
    ".venv/bin/python -m pip install -r requirements.txt",
    
    // Install Node.js dependencies for React app
    "cd frontend && npm install"
  ],
  "customizations": {
    "vscode": {
      "settings": {
        "python.defaultInterpreterPath": ".venv/bin/python",
        "python.terminal.activateEnvironment": true
      }
    }
  },
  "remoteUser": "vscode",
  "postStartCommand": "echo 'DevContainer setup complete!'"
}
